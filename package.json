{
  "name": "project-x",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Kiryl Misachenka <kmisachenka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "type-check": "npm run type-check:web && npm run type-check:api",
    "type-check:web": "tsc --project web/tsconfig.json --pretty --noEmit",
    "type-check:api": "tsc --project api/tsconfig.json --pretty --noEmit",
    "format": "prettier --write **/*.{ts,tsx}",
    "format:check": "prettier --check **/*.{ts,tsx}",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint --fix",
    "lint:lockfile": "npm run lint:lockfile:common && npm run lint:lockfile:web && npm run lint:lockfile:api",
    "lint:lockfile:cmd": "lockfile-lint --allowed-hosts npm yarn --validate-https",
    "lint:lockfile:common": "npm run lint:lockfile:cmd -- --path package-lock.json",
    "lint:lockfile:web": "npm run lint:lockfile:cmd -- --path web/package-lock.json",
    "lint:lockfile:api": "npm run lint:lockfile:cmd -- --path api/package-lock.json",
    "check:all": "npm run type-check && npm run format:check && npm run lint && npm run lint:lockfile"
  },
  "dependencies": {},
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unicorn": "^22.0.0",
    "lockfile-lint": "^4.3.7",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  }
}
