{
  "name": "project-x",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Kiryl Misachenka <kmisachenka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "type-check": "yarn type-check:web && yarn type-check:api",
    "type-check:web": "tsc --project web/tsconfig.json --pretty --noEmit",
    "type-check:api": "tsc --project api/tsconfig.json --pretty --noEmit",
    "format": "prettier --write **/*.{ts,tsx}",
    "lint": "eslint . --fix --ext .ts,.tsx",
    "lint:lockfile": "yarn lint:lockfile:common && yarn lint:lockfile:web && yarn lint:lockfile:api",
    "lint:lockfile:cmd": "lockfile-lint --allowed-hosts npm yarn --validate-https",
    "lint:lockfile:common": "yarn lint:lockfile:cmd --path yarn.lock",
    "lint:lockfile:web": "yarn lint:lockfile:cmd --path web/yarn.lock",
    "lint:lockfile:api": "yarn lint:lockfile:cmd --path api/yarn.lock",
    "check-all": "yarn type-check && yarn lint && yarn lint:lockfile"
  },
  "dependencies": {},
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/express": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unicorn": "^20.1.0",
    "lockfile-lint": "^4.3.7",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  }
}
