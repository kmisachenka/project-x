{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "build",
    "lib": ["dom"],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
